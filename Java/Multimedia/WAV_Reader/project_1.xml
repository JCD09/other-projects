    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_wavprocessor.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.wavprocessor, clean.artifact.wavprocessor" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.wavprocessor" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.wavprocessor" value="${basedir}/out/artifacts/WavProcessor"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.WavProcessor" value="${artifacts.temp.dir}/WavProcessor.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.9}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.wavprocessor" description="clean WavProcessor artifact output">
    <delete dir="${artifact.output.wavprocessor}"/>
  </target>
  
  <target name="artifact.wavprocessor" depends="init.artifacts, compile.module.wavprocessor" description="Build &#39;WavProcessor&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.wavprocessor}"/>
    <copy todir="${artifact.temp.output.WavProcessor}">
      <fileset dir="${wavprocessor.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_WavProcessor" dir="${artifact.temp.output.WavProcessor}" includes="**/*.jar">
      <exclude name="WavProcessor.jar"/>
    </fx:fileset>
    <fx:fileset id="all_WavProcessor" dir="${artifact.temp.output.WavProcessor}" includes="**/*.jar"/>
    <fx:application id="WavProcessor_id" name="WavProcessor" mainClass="null"/>
    <fx:jar destfile="${artifact.temp.output.WavProcessor}/WavProcessor.jar">
      <fx:application refid="WavProcessor_id"/>
      <fileset dir="${artifact.temp.output.WavProcessor}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_WavProcessor"/>
      </fx:resources>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.WavProcessor}/deploy" outfile="WavProcessor">
      <fx:application refid="WavProcessor_id"/>
      <fx:resources>
        <fx:fileset refid="all_WavProcessor"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.wavprocessor}">
      <fileset dir="${artifact.temp.output.WavProcessor}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.WavProcessor}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.wavprocessor" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
